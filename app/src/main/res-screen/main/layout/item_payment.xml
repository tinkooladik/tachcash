<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    >
  <android.support.v7.widget.CardView
      android:id="@+id/cvService"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_marginEnd="14dp"
      android:layout_marginStart="14dp"
      android:layout_marginTop="16dp"
      app:elevation="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/clTicket"
      >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightBlue"
        >
      <ImageView
          android:id="@+id/ivServiceIcon"
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:layout_marginStart="8dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:id="@+id/tvServiceName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:fontFamily="@font/circe_bold"
          android:textColor="@color/colorGray"
          app:layout_constraintBottom_toTopOf="@id/tvAccount"
          app:layout_constraintStart_toEndOf="@+id/ivServiceIcon"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_chainStyle="packed"
          tools:text="Popolnenie mobilnogo"
          />
      <TextView
          android:id="@+id/tvAccount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:fontFamily="@font/century_gothic"
          android:textColor="@color/colorAlmostBlack"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@+id/ivServiceIcon"
          app:layout_constraintTop_toBottomOf="@id/tvServiceName"
          tools:text="+380 95 422 69 77"
          />
      <android.support.constraint.ConstraintLayout
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:background="@drawable/shape_rounded_side"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingStart="16dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          >
        <TextView
            android:id="@+id/tvSumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/circe_bold"
            android:text="@string/payment_amount"
            android:textAllCaps="true"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvSum"
            app:layout_constraintEnd_toStartOf="@id/ivDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/circe_bold"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSumTitle"
            tools:text="80 hrn"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ivDelete"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rubbish_bin"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:alpha=".2"
            android:background="@color/colorTransparentGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivDelete"
            app:layout_constraintTop_toTopOf="parent"
            />

      </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>